<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12sp"
    android:layout_marginRight="12sp"
    android:layout_marginLeft="12sp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView

            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.5"
            android:src="@drawable/books"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/tvName_item_BillDetail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:id="@+id/tvQuantity_item_BillDetail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tvPrice_item_BillDetail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:id="@+id/tvTotalMoney_itemBillDetail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgEdit_item_BillDetail"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/edit"
            android:layout_weight="0.2"

            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgDelete_item_BillDetail"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/delete"
            android:layout_weight="0.2"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</android.support.v7.widget.CardView>