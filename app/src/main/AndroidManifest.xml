<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.admin.quanlysach">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.example.admin.quanlysach.WelcomeScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.admin.quanlysach.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.admin.quanlysach.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.example.admin.quanlysach.UserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.admin.quanlysach.GenreActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name="com.example.admin.quanlysach.BookActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.admin.quanlysach.BillActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.admin.quanlysach.TopBook"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.admin.quanlysach.StatisticActivtiy" />
        <activity
            android:name="com.example.admin.quanlysach.BillDetailActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>
